  "attributes": {
    "partners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::partner.partner",
      "mappedBy": "locations"
    },
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "type": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true,
      "enum": [
        "other",
        "restaurant",
        "café",
        "bistro",
        "bar",
        "food truck",
        "street food stall",
        "bakery",
        "patisserie",
        "deli",
        "butcher shop",
        "fish market",
        "farmers’ market",
        "supermarket",
        "grocery store",
        "winery",
        "brewery",
        "distillery",
        "vineyard",
        "farm",
        "orchard",
        "food court",
        "canteen",
        "dining hall",
        "pop-up restaurant",
        "culinary school",
        "cooking studio",
        "test kitchen",
        "private dining room",
        "banquet hall",
        "event venue",
        "food festival location",
        "catering facility",
        "hotel restaurant",
        "rooftop bar/restaurant",
        "beach bar",
        "tea house",
        "ice cream parlor",
        "chocolate shop",
        "food warehouse",
        "food distribution center"
      ]
    },
    "body": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "location": {
      "type": "customField",
      "customField": "plugin::strapi-location-picker.location-picker",
      "options": {
        "info": true
      }
    },
    "address": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false
    },
    "cover": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "local_heroes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::local-hero.local-hero",
      "mappedBy": "location_relation"
    }
