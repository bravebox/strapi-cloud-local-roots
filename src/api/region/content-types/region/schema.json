{
  "kind": "collectionType",
  "collectionName": "regions",
  "info": {
    "singularName": "region",
    "pluralName": "regions",
    "displayName": "Regions",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "name_de": {
      "type": "string",
      "required": true
    },
    "short_name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "location": {
      "type": "customField",
      "customField": "plugin::strapi-location-picker.location-picker",
      "options": {
        "info": true
      }
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Other",
        "Federal state",
        "Province",
        "District",
        "County",
        "Municipality",
        "City",
        "Town",
        "Village",
        "Neighborhood",
        "Nature Reserve (or Protected Area)",
        "National Park"
      ]
    },
    "website_url": {
      "type": "string"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "locations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::location.location"
    },
    "local_heroes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::local-hero.local-hero",
      "mappedBy": "region"
    }
  }
}
