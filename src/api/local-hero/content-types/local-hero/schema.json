{
  "kind": "collectionType",
  "collectionName": "local_heroes",
  "info": {
    "singularName": "local-hero",
    "pluralName": "local-heroes",
    "displayName": "Local heroes",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "body": {
      "type": "blocks"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "string"
    },
    "plus": {
      "type": "boolean",
      "default": false
    },
    "website_url": {
      "type": "string",
      "regex": "^https:\\/\\/[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}([\\/\\w .-]*)*\\/?$"
    },
    "reserve_href": {
      "type": "string",
      "regex": "^https:\\/\\/[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}([\\/\\w .-]*)*\\/?$"
    },
    "special_notes": {
      "type": "component",
      "component": "shared.list",
      "repeatable": true
    },
    "phone": {
      "type": "component",
      "component": "shared.phone",
      "repeatable": false
    },
    "partners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::partner.partner",
      "mappedBy": "local_heroes"
    },
    "recipes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::recipe.recipe",
      "mappedBy": "local_hero"
    },
    "region": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::region.region",
      "inversedBy": "local_heroes"
    },
    "location_relation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "use_custom_location"
            },
            true
          ]
        }
      },
      "inversedBy": "local_heroes"
    },
    "use_custom_location": {
      "type": "boolean",
      "default": false
    },
    "location": {
      "type": "customField",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "use_custom_location"
            },
            true
          ]
        }
      },
      "customField": "plugin::strapi-location-picker.location-picker",
      "options": {
        "info": true
      }
    },
    "address": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "use_custom_location"
            },
            true
          ]
        }
      },
      "component": "shared.address",
      "repeatable": false
    }
  }
}
